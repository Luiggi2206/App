<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actividades.actividades.RecuperarPassword_Activity">

    <Button
        android:id="@+id/btnConfirmar_RecupPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="21dp"
        android:text="CONFIRMAR"
        app:layout_constraintEnd_toStartOf="@+id/btnSalir_RecupPass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPass2_RecupPass" />

    <Button
        android:id="@+id/btnSalir_RecupPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="36dp"
        android:text="SALIR"
        app:layout_constraintStart_toEndOf="@+id/btnConfirmar_RecupPass"
        app:layout_constraintTop_toBottomOf="@+id/txtPass2_RecupPass" />

    <EditText
        android:id="@+id/txtPass1_RecupPass"
        android:layout_width="241dp"
        android:layout_height="60dp"
        android:layout_marginStart="89dp"
        android:layout_marginTop="91dp"
        android:ems="10"
        android:hint="Ingrese su nueva contraseña"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtPass2_RecupPass"
        android:layout_width="239dp"
        android:layout_height="57dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Repita su contraseña"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPass1_RecupPass" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="197dp"
        android:layout_height="35dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="25dp"
        android:text="CAMBIAR CONTRASEÑA"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>